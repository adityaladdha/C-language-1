#include <stdio.h>
#include <stdlib.h>

int main()
{
    int a,row,p,s;
    printf("enter number of rows to be print :  ");
    scanf("%d",&row);
    for(a=1;a<=row;a++)   //a is corresponding row
    {
      for(s=row-a;s>=1;s--)  //s is space
      {
          printf(" ");
      }
      for(p=1;p<=a;p++)   //p is printing star
      {
          printf("* ");
      }
    printf("\n");
    }
      return 0;
}
